/* Estiliza links de paginação */
.page-link {
  color: var(--bs-blue); /* Cor azul */
}

.page-link:hover {
  z-index: 2; /* Coloca o link acima de outros elementos */
  color: #fff; /* Cor branca no hover */
  background-color: var(--bs-blue); /* Fundo azul no hover */
  border-color: var(--bs-blue); /* Borda azul no hover */
}

/* Estiliza todos os links */
a {
  color: var(--bs-blue); /* Cor azul */
}

/* Estiliza texto em negrito */
b, strong {
  color: var(--bs-blue); /* Cor azul */
  font-weight: bolder; /* Peso da fonte mais forte */
}

/* Estiliza categorias de listagem em posts */
div.quarto-post .listing-categories .listing-category {
  color: var(--bs-blue); /* Cor azul */
  border: solid 1px var(--bs-gray-400); /* Borda cinza */
  font-size: .8em; /* Tamanho da fonte menor */
}

/* Estiliza botões primários */
.btn-primary {
  color: #fff; /* Cor do texto branca */
  background-color: var(--bs-blue); /* Fundo azul */
  border-color: var(--bs-blue); /* Borda azul */
}

/* Estiliza links ativos na barra lateral */
.sidebar nav[role=doc-toc] ul>li>a.active {
  border-left: 1px solid var(--bs-green); /* Borda esquerda azul */
  color: var(--bs-green) !important; /* Cor azul */
}

.sidebar nav[role=doc-toc] ul>li>ul>li>a.active {
  border-left: 1px solid var(--bs-green); /* Borda esquerda azul */
  color: var(--bs-green) !important; /* Cor azul */
}

/* Estiliza links na seção "about" ao passar o mouse */
div.quarto-about-trestles .about-entity .about-link:hover {
  color: var(--bs-blue); /* Cor azul no hover */
}

/* Estiliza links de navegação ao passar o mouse ou focar */
.nav-link:hover, .nav-link:focus {
  color: var(--bs-blue); /* Cor azul no hover ou foco */
}

/* Estiliza alertas primários */
.alert-primary {
  color: var(--bs-gray-dark); /* Cor do texto cinza escura */
  background-color: var(--bs-body-bg); /* Fundo com cor do corpo */
  border-color: var(--bs-blue); /* Borda azul */
  border-style: dashed; /* Estilo da borda tracejada */
}

/* Estiliza links de navegação */
.nav-link {
  color: var(--bs-white); /* Cor branca */
}

/* Estiliza botões primários ao passar o mouse */
.btn-primary:hover {
  color: #000; /* Cor do texto preta */
  background-color: #f0f1ff; /* Fundo azul claro */
  border-color: #f0f1ff; /* Borda azul claro */
  padding: .375rem .75rem; /* Espaçamento interno */
  font-size: 1.1rem !important; /* Tamanho da fonte maior */
  margin-top: -9px; /* Margem superior negativa */
}

